= render partial:'layouts/header'
- content_for :title, "Редактирование аккаунта"
%article
  %h3 Hедактирование аккаунта
  .form-horizontal
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .form-inputs
        = f.input :email, 
          required: true, 
          autofocus: true,
          input_html: { class: "form-control" },
          label_html: { class: 'form-label' }
        = f.input :password, 
          input_html: {value: f.object.password},
          hint: "Оставьте пустым, если не хотите менять пароль", 
          autocomplete: "off", 
          required: false,
          input_html: { class: "form-control" },
          label_html: { class: 'form-label' }
        = f.input :password_confirmation, 
          required: false,
          input_html: { class: "form-control" },
          label_html: { class: 'form-label' }
        = f.input :current_password, 
          hint: "Подтвердите изменения введя текущий пароль", 
          required: true,
          input_html: { class: "form-control" },
          label_html: { class: 'form-label' }
      .row
        .form-actions
          = f.button :submit, "Сохранить изменения",
            class:"btn btn-primary"            
