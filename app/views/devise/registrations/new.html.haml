- content_for :title, "Регистрация"
%article
  .form-horizontal
    .row
      .col-sm-6.col-sm-offset-3
        %h3 Регистрация
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f|
          = f.error_notification
          .form-inputs
            = f.input :name,
              label: "Ваше имя",
              required: true,
              input_html: { class: "form-control" },
              label_html: { class: 'form-label' }
            = f.input :email,
              required: true,
              autofocus: true,
              input_html: { class: "form-control" },
              label_html: { class: 'form-label' }
            = f.input :password,
              label: "Пароль",
              required: true,
              hint: ("Не меньше #{@minimum_password_length} символов"),
              input_html: { class: "form-control" },
              label_html: { class: 'form-label' }
            = f.input :password_confirmation,
              label: "Подтвердите пароль",
              required: true,
              input_html: { class: "form-control" },
              label_html: { class: 'form-label' }              
            = f.button :submit, "Зарегистрироваться",
              class:"btn btn-primary"
    /= render "devise/shared/links"

